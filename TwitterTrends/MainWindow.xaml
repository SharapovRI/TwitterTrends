<Window x:Class="TwitterTrends.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitterTrends"
        xmlns:res="clr-namespace:TwitterTrends.Properties"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Icon="Images/preview_navi.png">
    <Window.Background>
        <ImageBrush ImageSource="Images/background.jpg" Opacity="0.4" />
    </Window.Background>
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource ControlForegroundWhite}"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockStyle}"/>
        <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}"/>
    </Window.Resources>

    <ContentPresenter x:Name="presenter">
        
    </ContentPresenter>
</Window>
