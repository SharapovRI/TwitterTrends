<Window x:Class="TwitterTrends.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitterTrends"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#56B5FF" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Slider Grid.Row="0" Background="AliceBlue"></Slider>
        <Viewbox Grid.Row="1" Stretch="Uniform"  Margin="0,0,0,10" x:Name="ZoomViewbox"  >
            <Grid x:Name="gridMap" MouseWheel="ZoomViewbox_MouseWheel">
               <Grid.RenderTransform>
                 <ScaleTransform x:Name="stMap" ScaleX="1" ScaleY="1" />
                </Grid.RenderTransform>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
