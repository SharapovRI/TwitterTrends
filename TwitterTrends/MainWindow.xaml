<Window x:Class="TwitterTrends.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitterTrends"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
         >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#fff">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="btnAddFile" Content="Add file" Background="White" BorderBrush="White" Height="25" Margin="0,0,0,2.4" VerticalAlignment="Bottom" Click="btnAddFile_Click" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Background="#56B5FF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" ClipToBounds="True">
                <Grid Width="10" HorizontalAlignment="Left" Background="White" Panel.ZIndex="1">
                    <Grid.Style>
                        <Style TargetType="{x:Type Grid}">
                            <Style.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <EventTrigger.Actions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetProperty="Width" To="260"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger.Actions>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <EventTrigger.Actions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetProperty="Width" To="10"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger.Actions>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TreeView Width="250" Grid.Row="0" BorderBrush="White" HorizontalAlignment="Left">
                        <TreeViewItem Header="Choose File" FontSize="14">
                            <TreeViewItem Header="File 1" />
                            <TreeViewItem Header="File 2" />
                            <TreeViewItem Header="File 3" />
                            <TreeViewItem Header="File 4" />
                        </TreeViewItem>
                    </TreeView>
                    <Grid x:Name="gTweet" Grid.Row="1" Background="White" >
                    </Grid>
                </Grid>
                <Viewbox Stretch="Uniform" Margin="0,0,0,10" x:Name="ZoomViewbox">
                    <Grid x:Name="gridMap" MouseWheel="ZoomViewbox_MouseWheel">
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="stMap" ScaleX="1" ScaleY="1" />
                        </Grid.RenderTransform>
                    </Grid>
                </Viewbox>
            </Grid>
        </Grid>
    </Grid>
</Window>
